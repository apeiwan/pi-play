    "cssnano": "4.1.10",
    "cz-conventional-changelog": "^3.3.0",
    "dayjs": "^1.10.6",
    "dotenv-cli": "^4.0.0",
    "fbemitter": "^3.0.0",
    "file-loader": "^6.2.0",
    "inquirer": "^8.1.2",
    "md5-file": "^5.0.0",
