    "vue-template-compiler": "^2.6.11"
  },
  "browserslist": [
    "Android >= 4.0",
    "iOS >= 8"
  ],
  "dependencies": {
    "@apeiwan/ppjsbridge": "^0.1.2",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "ali-oss": "^6.16.0",
    "babel-plugin-transform-require-image-to-url": "^0.1.0",
    "body-scroll-lock": "^4.0.0-beta.0",
    "case-anything": "^1.1.3",
